<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:left="1dp" android:top="1dp" android:bottom="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="20dp" />
